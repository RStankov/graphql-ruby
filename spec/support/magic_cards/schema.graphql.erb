type Card {
  name: String!
  <%= connects(printings: "Printing") %>
  expansions: [Expansion!]!
  colors: [Color!]!
  convertedManaCost: Int!
}

type Expansion {
  name: String!
  symbol: String!
  printings: [Printing!]!
  cards: [Card!]!
}

type Printing {
  card: Card!
  expansion: Expansion!
}

enum Color {
  RED
  GREEN
  BLACK
  BLUE
  WHITE
  COLORLESS
}

<%= connection("Printing") %>
<%= page_info %>

type Query {
  card(name: String!): Card
  expansion(symbol: String!): Expansion
}
